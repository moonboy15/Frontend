<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UnhealthyFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/button_list_to_categories"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:src="@drawable/left" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="0dp"
            android:layout_gravity="left"
            android:text="Unhealthy Food Category"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white_smoke"
            android:fontFamily="@font/lilita_one"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchEditText_unhealthy"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@color/white_smoke"
            app:iconifiedByDefault="false"
            app:queryHint="Search.." />

        <Spinner
            android:background="@drawable/ic_filters"
            android:id="@+id/spinner_tags_unhealthy"
            android:layout_marginStart="30dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white_smoke">

        <LinearLayout
            android:id="@+id/foodTypesLayout_unhealthy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_dish_unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_red"
                android:text="Dish"
                android:textSize="18sp"
                android:fontFamily="@font/lilita_one"/>
            <Button
                android:id="@+id/button_drink_unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_red"
                android:text="Drink"
                android:textSize="18sp"
                android:fontFamily="@font/lilita_one"/>
            <Button
                android:id="@+id/button_ingredient_unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_red"
                android:text="Ingredient"
                android:textSize="18sp"
                android:fontFamily="@font/lilita_one"/>
            <Button
                android:id="@+id/button_snack_unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_red"
                android:text="Snack"
                android:textSize="18sp"
                android:fontFamily="@font/lilita_one"/>
            <Button
                android:id="@+id/button_misc_unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_red"
                android:text="Misc."
                android:textSize="18sp"
                android:fontFamily="@font/lilita_one"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:id="@+id/foodListView_unhealthy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" />

</LinearLayout>
