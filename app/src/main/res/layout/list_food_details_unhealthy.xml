<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/button_details_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unhealthy Food Details"
            android:textColor="@color/white_smoke"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/visby_extra_bold"
            android:layout_marginTop="8dp"
            android:gravity="center"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_food_name_unhealthy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Food name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/visby_heavy"/>

            <ImageView
                android:id="@+id/foodDetail_imageView_unhealthy"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="180dp"
                android:layout_margin="18dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_main_ingredient" />

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_serving" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView_food_category_unhealthy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="10dp"
                            android:text="Pork"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_bold"
                            android:textStyle="italic"/>
                        <TextView
                            android:id="@+id/textView_food_type_unhealthy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="42dp"
                            android:layout_marginLeft="10dp"
                            android:text="Dish"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_bold"
                            android:textStyle="italic"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_disbenefit" />

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_calories2" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView_food_disbenefit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="10dp"
                            android:text="Heart"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_bold"
                            android:textStyle="italic"/>
                        <TextView
                            android:id="@+id/textView_food_calories_unhealthy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="42dp"
                            android:layout_marginLeft="10dp"
                            android:text="104"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_bold"
                            android:textStyle="italic"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView_food_description_unhealthy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:textSize="14sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_see_alternative"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_red"
                android:text="See Alternatives"
                android:textSize="16sp"
                android:textColor="@color/white_smoke"
                android:textAllCaps="false"
                android:fontFamily="@font/visby_extra_bold"/>

            <LinearLayout
                android:id="@+id/alternativeView_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/alternative_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="Ingredients / Related Food"
                android:textSize="18sp"
                android:fontFamily="@font/visby_extra_bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ingredientsRecyclerView_unhealthy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal" />

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>